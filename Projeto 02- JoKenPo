from random import randint
from time import sleep

print('Seja bem vindo (a) ao JOKENPO \n A jornada para a vitÃ³ria nÃ£o serÃ¡ fÃ¡cil, faÃ§a por merecer a vitÃ³ria \n Boa sorte!!! \n ')
lista = ['Pedra âœŠ', 'Papel âœ‹', 'Tesoura âœŒï¸']
contagem_jogador = contagem_computador = empate = 0


while True:
    sleep(.5)
    
    rodadas = int(input('Digite quantas rodadas quer jogar: '))
    
    for contador in range(0, rodadas):
        escolha_jogador = int(input('''
        [0] - Pedra âœŠ
        [1] - Papel âœ‹
        [2] - Tesoura âœŒï¸
        Digite sua escolha: '''))
        sleep(.2)
        print('JO')
        sleep (1)
        print('KEN')
        sleep (1)
        print('PO!!!')
        #Bloco para solicitar a escolha do jogador
        computador = randint(0, 2)
        #Bloco de cÃ³digo para fazer as comparaÃ§Ãµes entre as jogadas.
        if escolha_jogador < 0 or escolha_jogador > 2: # Se escolha do jogador estiver fora de (0(pedra)1(papel)2(tesoura) serÃ¡ invalida)
            print('opÃ§Ã£o invÃ¡lida!!!')
            rodadas += 1
            continue
        else:
            if computador == 0:  # pedra
                if escolha_jogador == 0:
                    empate += 1
                    sleep(.5)
                    print(f'\n Essa rodada ficou empatada, mas confio em vocÃª!!! \n VocÃª escolheu: {lista[escolha_jogador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 1:
                    contagem_computador += 1
                    sleep(.5)
                    print(f'\n Boooa! VocÃª ganhou essa rodada!!! \nVocÃª escolheu: {lista[computador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 2:
                    contagem_computador += 1
                    sleep(.5)
                    print(f'\n O computador ganhou essa rodada, nÃ£o desanime!!! \nVocÃª escolheu: {lista[escolha_jogador]}\nComputador: {lista[computador]}')

            elif computador == 1:  # papel
                if escolha_jogador == 1:
                    empate += 1
                    sleep(.5)
                    print(f'\n Essa rodada ficou empatada, mas confio em vocÃª!!! \nVocÃª escolheu: {lista[escolha_jogador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 0:
                    sleep(.5)
                    contagem_jogador += 1
                    print(
                        f'\n Boooa! VocÃª ganhou essa rodada!!! \nSua escolha: {lista[escolha_jogador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 2:
                    contagem_jogador += 1
                    sleep(.5)
                    print(f'\n \nSua escolha: {lista[escolha_jogador]}\nComputador: {lista[computador]}')

            elif computador == 2:  # tesoura
                if escolha_jogador == 2:
                    empate += 1
                    sleep(.5)
                    print(
                        f'\n Essa rodada ficou empatada, mas confio em vocÃª!!! \nVocÃª escolheu: {lista[escolha_jogador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 1:
                    contagem_computador += 1
                    sleep(.5)
                    print(
                        f'\n O computador ganhou essa rodada, nÃ£o desanime!!! \nVocÃª escolheu:{lista[escolha_jogador]}\nComputador: {lista[computador]}')
                elif escolha_jogador == 0:
                    contagem_jogador += 1
                    sleep(.5)
                    print(f'\n Boooa! VocÃª ganhou essa rodada!!! \nVocÃª escolheu: {lista[escolha_jogador]}\nComputador: {lista[computador]}')
                        
#Bloco de cÃ³digo para fazer a contagem de resultado
    if contagem_jogador > contagem_computador:
        sleep(.5)
        print("VocÃª ganhou, eu sempre acreditei!!!")
    elif contagem_computador > contagem_jogador:
        sleep(.5)
        print('Infelizmente, o computador foi o vencedor')
    else:
        sleep(.5)
        print('Jogo empatado')
    sleep(.5)
    continuar = input('Deseja continuar jogando [S/N]: ').lower().strip()[0]
    if continuar == 's':
        continue
    else:
        break

#Resultado final
sleep(.5)
print(f'\nSuas vitÃ³rias: {contagem_jogador} - Total ğŸ†')
print(f'VitÃ³rias do computador: {contagem_computador} - Total ğŸ†')
print(f'Empates: {empate} - Total')
